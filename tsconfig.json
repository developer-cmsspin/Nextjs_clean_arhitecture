{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/atoms/*": ["./src/package/energizee-ui-kit/components/ui/01_atoms/*"],
      "@/molecules/*": ["./src/package/energizee-ui-kit/components/ui/02_molecules/*"],
      "@/components/*": ["./src/package/energizee-ui-kit/components/ui/03_components/*"],
      "@/themes/*": ["./src/shared/themes/*"],
      "@/utilities/*": ["./src/package/energizee-ui-kit/globalStyles/utilities/*"],
      "@/globalStyles/*": ["./src/package/energizee-ui-kit/globalStyles/*"],
      "@/icomoon/*": ["./src/shared/themes/energizeeUI/assets/fonts/icomoon/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
